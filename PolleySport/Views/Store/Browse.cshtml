@model PolleySport.Models.SubCategory
@{
    ViewBag.Title = "Browse";
}

<h2>Browse</h2>
<div class="page-header">
    <h2>Products <small>in @Model.SubCategoryName</small></h2>
</div>
<div class="row text-center">
    @foreach (var product in Model.Products)
    {
        <div class="col-sm-6 col-md-3 col-xs-12">
            <div class="thumbnail">
                <img class="img-rounded" src="@(string.Format("/{0}", product.ImageURL))" alt="@product.Name" width="244" height="244">
                <div class="caption">
                    <h3>@product.Name</h3>
                    <hr>
                    <div class="row">
                        <p>
                            <a href="@Url.Action("ProductDetails", new { id = product.ProductId })" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>